// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "科目名称",
			"label": "科目名称",
			"componentForEdit": {
				"name": "uni-easyinput"
			}
		},
		"icon": {
			"bsonType": "string",
			"description": "图标key",
			"label": "图标key",
			"componentForEdit": {
				"name": "uni-easyinput"
			}
		},
		"description": {
			"bsonType": "string",
			"description": "科目描述",
			"label": "科目描述",
			"componentForEdit": {
				"name": "textarea"
			},
			"componentForShow": {
				"name": "textarea"
			}
		},
		"create_date": {
			"bsonType": "timestamp",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForEdit": {
				"name": "uni-dateformat"
			}
		}
	}
}