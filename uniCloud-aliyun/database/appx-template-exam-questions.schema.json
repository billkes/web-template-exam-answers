{
	"bsonType": "object",
	"description": "考试题目表",
	"required": ["exam_id", "content", "type", "score", "answer"],
	"properties": {
		"_id": {
			"description": "题目ID",
			"bsonType": "string"
		},
		"exam_id": {
			"description": "所属考试ID",
			"bsonType": "string"
		},
		"exam_name": {
			"description": "所属考试名称",
			"bsonType": "string",
			"trim": true,
			"maxLength": 100
		},
		"content": {
			"description": "题目内容",
			"bsonType": "string",
			"trim": true,
			"minLength": 2,
			"maxLength": 1000
		},
		"type": {
			"description": "题目类型",
			"bsonType": "string",
			"enum": ["single", "multiple"],
			"defaultValue": "single"
		},
		"options": {
			"description": "题目选项(选择题使用)",
			"bsonType": "array",
			"items": {
				"bsonType": "object",
				"properties": {
					"key": {
						"bsonType": "string",
						"description": "选项键(A,B,C...)"
					},
					"value": {
						"bsonType": "string",
						"description": "选项内容",
						"minLength": 1,
						"maxLength": 500
					}
				}
			}
		},
		"answer": {
			"description": "正确答案",
			"bsonType": "string"
		},
		"analysis": {
			"description": "答案解析",
			"bsonType": "string",
			"trim": true,
			"maxLength": 1000
		},
		"score": {
			"description": "题目分值",
			"bsonType": "number",
			"minimum": 0,
			"maximum": 100,
			"defaultValue": 5
		},
		"create_time": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		},
		"update_time": {
			"description": "更新时间",
			"bsonType": "timestamp"
		}
	}
}