{
	"bsonType": "object",
	"description": "题目表(合并题目和选项)",
	"required": [],
	"properties": {
		"_id": {
			"description": "题目ID",
			"bsonType": "string"
		},
		"exam_id": {
			"description": "所属考试ID",
			"bsonType": "string"
		},
		"content": {
			"description": "题目内容",
			"bsonType": "string",
			"trim": true,
			"minLength": 2,
			"maxLength": 1000
		},
		"type": {
			"description": "题目类型(1-单选,2-多选)",
			"bsonType": "int",
			"enum": [1, 2],
			"defaultValue": 1
		},
		"score": {
			"description": "题目分值",
			"bsonType": "int",
			"minimum": 1,
			"maximum": 100
		},
		"options": {
			"description": "选项列表",
			"bsonType": "array",
			"items": {
				"bsonType": "object",
				"properties": {
					"id": {
						"description": "选项ID",
						"bsonType": "string"
					},
					"content": {
						"description": "选项内容",
						"bsonType": "string",
						"trim": true,
						"minLength": 1,
						"maxLength": 500
					},
					"is_correct": {
						"description": "是否正确答案",
						"bsonType": "bool",
						"defaultValue": false
					}
				}
			}
		},
		"create_time": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}