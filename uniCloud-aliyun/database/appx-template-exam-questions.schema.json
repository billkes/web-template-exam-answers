{
	"bsonType": "object",
	"description": "考试表",
	"required": ["name", "start_time", "end_time", "duration", "total_score"],
	"properties": {
		"_id": {
			"description": "考试ID",
			"bsonType": "string"
		},
		"name": {
			"description": "考试名称",
			"bsonType": "string",
			"trim": true,
			"minLength": 2,
			"maxLength": 100
		},
		"description": {
			"description": "考试说明",
			"bsonType": "string",
			"trim": true,
			"maxLength": 500
		},
		"start_time": {
			"description": "开始时间",
			"bsonType": "timestamp"
		},
		"end_time": {
			"description": "结束时间",
			"bsonType": "timestamp"
		},
		"duration": {
			"description": "考试时长(分钟)",
			"bsonType": "int",
			"minimum": 1,
			"maximum": 600
		},
		"total_score": {
			"description": "考试总分",
			"bsonType": "number",
			"minimum": 0,
			"maximum": 1000
		},
		"status": {
			"description": "状态(0-禁用,1-启用)",
			"bsonType": "int",
			"enum": [0, 1],
			"defaultValue": 1
		},
		"create_time": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}