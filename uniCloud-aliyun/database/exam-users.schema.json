{
	"bsonType": "object",
	"required": ["user_id","username"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"title": "系统用户",
			"label": "系统用户",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择系统用户",
					"collection": "uni-id-users",
					"field": "nickname as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					"collection": "uni-id-users",
					"field": "nickname as text, _id as value",
					":getone": true,
					":where": "`_id == '${item.user_id}'`",
					"align": "center",
					"mode": "none",
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"username": {
			"bsonType": "string",
			"title": "用户名",
			"description": "请输入用户名",
			"label": "用户名"
		},
		"email": {
			"bsonType": "string",
			"title": "邮箱",
			"description": "请输入邮箱地址",
			"label": "邮箱"
		},
		"nickname": {
			"bsonType": "string",
			"title": "昵称",
			"description": "请输入昵称",
			"label": "昵称"
		},
		"avatar": {
			"bsonType": "string",
			"title": "头像",
			"label": "头像",
			"componentForEdit": {
				"name": "billkes-form-avatar"
			},
			"componentForShow": {
				"name": "billkes-table-avatar",
				"props": {
					"mode": "aspectFit"
				}
			}
		},
		"status": {
			"bsonType": "int",
			"title": "状态",
			"description": "用户状态：0-禁用，1-启用",
			"label": "状态",
			"defaultValue": 1,
			"minimum": 0,
			"maximum": 1,
			"enum": [{
					"value": 0,
					"text": "禁用"
				},
				{
					"value": 1,
					"text": "启用"
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择用户状态"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					":localdata": "options.filterData.status_localdata",
					"align": "center",
					"mode": "none",
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"created_date": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		},
		"updated_date": {
			"bsonType": "timestamp",
			"title": "更新时间",
			"description": "更新时间",
			"label": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		}
	}
}