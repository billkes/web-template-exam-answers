{
	"bsonType": "object",
	"required": ["name", "id_card", "phone", "pwd"],
	"properties": {
		"_id": {
			"bsonType": "string",
			"description": "系统自动生成的唯一ID"
		},
		"name": {
			"bsonType": "string",
			"description": "姓名",
			"minLength": 2,
			"maxLength": 20
		},
		"id_card": {
			"bsonType": "string",
			"description": "身份证号",
			"pattern": "^\\d{17}[\\dXx]$"
		},
		"pwd": {
			"bsonType": "string",
			"description": "密码",
			"minLength": 6
		},
		"phone": {
			"bsonType": "string",
			"description": "手机号",
			"pattern": "^1[3-9]\\d{9}$"
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间"
		},
		"creator": {
			"bsonType": "string",
			"description": "创建人"
		},
		"creator_id": {
			"bsonType": "string",
			"description": "创建人标识"
		},
		"modifier_id": {
			"bsonType": "string",
			"description": "修改人标识"
		},
		"modifier": {
			"bsonType": "string",
			"description": "修改人"
		},
		"modify_time": {
			"bsonType": "timestamp",
			"description": "修改时间"
		}
	}
}