{
	"bsonType": "object",
	"description": "考试表",
	"required": [],
	"properties": {
		"_id": {
			"description": "考试ID",
			"bsonType": "string"
		},
		"title": {
			"description": "考试标题",
			"bsonType": "string",
			"trim": true,
			"minLength": 2,
			"maxLength": 100
		},
		"description": {
			"description": "考试描述",
			"bsonType": "string",
			"trim": true,
			"maxLength": 500
		},
		"start_time": {
			"description": "开始时间",
			"bsonType": "timestamp"
		},
		"end_time": {
			"description": "结束时间",
			"bsonType": "timestamp"
		},
		"duration": {
			"description": "考试时长(分钟)",
			"bsonType": "int",
			"minimum": 1,
			"maximum": 600
		},
		"status": {
			"description": "状态(0-未开始,1-进行中,2-已结束)",
			"bsonType": "int",
			"enum": [0, 1, 2],
			"defaultValue": 0
		},
		"create_time": {
			"description": "创建时间",
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}