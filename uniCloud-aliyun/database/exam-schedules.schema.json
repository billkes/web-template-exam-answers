{
	"bsonType": "object",
	"required": [
		"exam_id",
		"title",
		"duration",
		"start_time",
		"end_time",
		"simple_score",
		"simple_count",
		"medium_score",
		"medium_count",
		"difficult_score",
		"difficult_count"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"exam_id": {
			"bsonType": "string",
			"title": "试卷",
			"label": "试卷",
			"foreignKey": "exams._id",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择试卷",
					"collection": "exams",
					":where": "`status == 1`",
					"field": "title as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "text",
				"props": {
					"v-text": "item.exam_id?.title || '-'"
				}
			}
		},
		"title": {
			"bsonType": "string",
			"title": "安排标题",
			"description": "请输入考试安排标题",
			"label": "安排标题"
		},
		"description": {
			"bsonType": "string",
			"title": "安排描述",
			"description": "请输入考试安排描述",
			"label": "安排描述",
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "textarea"
				}
			}
		},
		"start_time": {
			"bsonType": "timestamp",
			"title": "开始时间",
			"label": "开始时间",
			"componentForEdit": {
				"name": "uni-datetime-picker",
				"props": {
					"placeholder": "请选择考试开始时间"
				}
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss",
					":date": "item.start_time"
				}
			}
		},
		"end_time": {
			"bsonType": "timestamp",
			"title": "结束时间",
			"label": "结束时间",
			"componentForEdit": {
				"name": "uni-datetime-picker",
				"props": {
					"placeholder": "请选择考试结束时间"
				}
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss",
					":date": "item.start_time"
				}
			}
		},
		"duration": {
			"bsonType": "int",
			"title": "考试时长",
			"description": "考试时长（分钟）",
			"label": "考试时长",
			"minimum": 1,
			"maximum": 200,
			"componentForShow": {
				"name": "billkes-table-duration",
				"props": {
					"unit": "m"
				}
			}
		},
		"simple_score": {
			"bsonType": "number",
			"title": "简单题分数",
			"description": "试卷简单题分数",
			"label": "简单题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷简单题分数"
				}
			}
		},
		"simple_count": {
			"bsonType": "number",
			"title": "简单题数量",
			"description": "试卷简单题数量",
			"label": "简单题数量",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷简单题数量"
				}
			}
		},
		"medium_score": {
			"bsonType": "number",
			"title": "中等题分数",
			"description": "试卷中等题分数",
			"label": "中等题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷中等题分数"
				}
			}
		},
		"medium_count": {
			"bsonType": "number",
			"title": "中等题数量",
			"description": "试卷中等题数量",
			"label": "中等题数量",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷中等题数量"
				}
			}
		},
		"difficult_score": {
			"bsonType": "number",
			"title": "困难题分数",
			"description": "试卷困难题分数",
			"label": "困难题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷困难题分数"
				}
			}
		},
		"difficult_count": {
			"bsonType": "number",
			"title": "困难题数量",
			"description": "试卷困难题数量",
			"label": "困难题数量",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷困难题数量"
				}
			}
		},
		"total_score": {
			"bsonType": "number",
			"title": "总分",
			"description": "试卷总分",
			"label": "总分",
			"minimum": 0,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					":disabled": true,
					"placeholder": "自动计算"
				}
			}
		},
		"total_count": {
			"bsonType": "number",
			"title": "总题数",
			"description": "试卷总题数",
			"label": "总题数",
			"minimum": 0,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					":disabled": true,
					"placeholder": "自动计算"
				}
			}
		},
		"status": {
			"bsonType": "int",
			"title": "状态",
			"label": "状态",
			"minimum": 0,
			"maximum": 2,
			"enum": [{
					"value": 0,
					"text": "未开始"
				},
				{
					"value": 1,
					"text": "进行中"
				},
				{
					"value": 2,
					"text": "已结束"
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					":disabled": true,
					"placeholder": "自动计算"
				}
			},
			"componentForShow": {
				"name": "text",
				"props": {
					"v-text": "options.filterData.status_localdata?.find(o=>o.value===item?.status)?.text || '-'"
				}
			}
		},
		"created_date": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		},
		"updated_date": {
			"bsonType": "timestamp",
			"title": "更新时间",
			"description": "更新时间",
			"label": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		}
	}
}