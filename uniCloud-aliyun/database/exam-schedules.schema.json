{
	"bsonType": "object",
	"required": ["exam_id", "start_time", "end_time"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"exam_id": {
			"bsonType": "string",
			"title": "试卷",
			"label": "试卷",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择试卷",
					"collection": "exams",
					"field": "title as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					"collection": "exams",
					"field": "title as text, _id as value",
					":getone": true,
					":where": "`_id == '${item.exam_id}'`",
					"align": "center",
					"mode": "none",
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"title": {
			"bsonType": "string",
			"title": "安排标题",
			"description": "请输入考试安排标题",
			"label": "安排标题"
		},
		"description": {
			"bsonType": "string",
			"title": "安排描述",
			"description": "请输入考试安排描述",
			"label": "安排描述",
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "textarea"
				}
			}
		},
		"start_time": {
			"bsonType": "timestamp",
			"title": "开始时间",
			"label": "开始时间",
			"componentForEdit": {
				"name": "uni-datetime-picker",
				"props": {
					"placeholder": "请选择考试开始时间"
				}
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss",
					":date": "item.start_time"
				}
			}
		},
		"end_time": {
			"bsonType": "timestamp",
			"title": "结束时间",
			"label": "结束时间",
			"componentForEdit": {
				"name": "uni-datetime-picker",
				"props": {
					"placeholder": "请选择考试结束时间"
				}
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss",
					":date": "item.start_time"
				}
			}
		},
		"allowed_users": {
			"bsonType": "array",
			"title": "允许用户",
			"label": "允许用户",
			"arrayType": "string",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择允许参加考试的用户",
					"collection": "exam-users",
					"field": "username as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					"collection": "exam-users",
					"field": "username as text, _id as value",
					":page-size": "item.allowed_users?.length || 10",
					":where": "`_id in ${JSON.stringify(item.allowed_users)}`",
					"align": "center",
					"mode": "none",
					":multiple": true,
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"duration": {
			"bsonType": "int",
			"title": "考试时长",
			"description": "考试时长（分钟）",
			"label": "考试时长",
			"minimum": 1,
			"maximum": 200,
			"componentForShow": {
				"name": "billkes-table-duration",
				"props": {
					"unit": "m"
				}
			}
		},
		"simple_score": {
			"bsonType": "number",
			"title": "简单题分数",
			"description": "试卷简单题分数",
			"label": "简单题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷简单题分数"
				}
			}
		},
		"medium_score": {
			"bsonType": "number",
			"title": "中等题分数",
			"description": "试卷中等题分数",
			"label": "中等题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷中等题分数"
				}
			}
		},
		"difficult_score": {
			"bsonType": "number",
			"title": "困难题分数",
			"description": "试卷困难题分数",
			"label": "困难题分数",
			"minimum": 1,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					"placeholder": "请输入试卷困难题分数"
				}
			}
		},
		"total_score": {
			"bsonType": "number",
			"title": "总分",
			"description": "试卷总分",
			"label": "总分",
			"minimum": 0,
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "number",
					":disabled": true,
					"placeholder": "自动计算"
				}
			}
		},
		"status": {
			"bsonType": "int",
			"title": "状态",
			"label": "状态",
			"defaultValue": 0,
			"minimum": 0,
			"maximum": 2,
			"enum": [{
					"value": 0,
					"text": "未开始"
				},
				{
					"value": 1,
					"text": "进行中"
				},
				{
					"value": 2,
					"text": "已结束"
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择考试安排状态"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					":localdata": "options.filterData.status_localdata",
					"align": "center",
					"mode": "none",
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"created_date": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		},
		"updated_date": {
			"bsonType": "timestamp",
			"title": "更新时间",
			"description": "更新时间",
			"label": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		}
	}
}