{
	"bsonType": "object",
	"description": "用户考试关联表",
	"required": ["user_id", "exam_id", "enrolled_time"],
	"properties": {
		"_id": {
			"description": "记录ID",
			"bsonType": "string"
		},
		"user_id": {
			"bsonType": "string",
			"description": "用户ID"
		},
		"exam_id": {
			"bsonType": "string",
			"description": "考试ID"
		},
		"enrolled_time": {
			"bsonType": "timestamp",
			"description": "报名时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"status": {
			"bsonType": "int",
			"description": "报名状态：0-待审核，1-已通过，2-已拒绝",
			"defaultValue": 1
		}
	}
}