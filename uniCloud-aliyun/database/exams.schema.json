{
	"bsonType": "object",
	"required": ["title", "questions", "duration", "status"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"title": "试卷标题",
			"description": "请输入试卷标题",
			"label": "试卷标题"
		},
		"description": {
			"bsonType": "string",
			"title": "试卷描述",
			"description": "请输入试卷描述",
			"label": "试卷描述",
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "textarea"
				}
			}
		},
		"questions": {
			"bsonType": "array",
			"title": "题目列表",
			"description": "试卷包含的题目列表",
			"label": "题目列表",
			"arrayType": "string",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择题目",
					"collection": "exam-questions",
					"field": "title as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "billkes-table-exams-questions"
			}
		},
		"status": {
			"bsonType": "int",
			"title": "状态",
			"description": "试卷状态：0-草稿，1-发布",
			"label": "状态",
			"defaultValue": 0,
			"minimum": 0,
			"maximum": 1,
			"enum": [{
					"value": 0,
					"text": "草稿"
				},
				{
					"value": 1,
					"text": "发布"
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择试卷状态"
				}
			},
			"componentForShow": {
				"name": "uni-data-select",
				"props": {
					":localdata": "options.filterData.status_localdata",
					"align": "center",
					"mode": "none",
					":clear": false,
					":wrap": true,
					":hideRight": true,
					":disabled": true
				}
			}
		},
		"created_date": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		},
		"updated_date": {
			"bsonType": "timestamp",
			"title": "更新时间",
			"description": "更新时间",
			"label": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		}
	}
}