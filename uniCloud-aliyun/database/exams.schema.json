{
	"bsonType": "object",
	"required": ["title", "tag_id", "duration", "status"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"title": "试卷标题",
			"description": "请输入试卷标题",
			"label": "试卷标题"
		},
		"description": {
			"bsonType": "string",
			"title": "试卷描述",
			"description": "请输入试卷描述",
			"label": "试卷描述",
			"componentForEdit": {
				"name": "uni-easyinput",
				"props": {
					"type": "textarea"
				}
			}
		},
		"tag_id": {
			"bsonType": "string",
			"title": "科目",
			"description": "请选择科目",
			"label": "科目",
			"foreignKey": "uni-id-tag._id",
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					":where": "`tagid == 'exam'`",
					"placeholder": "请选择科目",
					"collection": "uni-id-tag",
					"field": "name as text, _id as value"
				}
			},
			"componentForShow": {
				"name": "text",
				"props": {
					"v-text": "item.tag_id?.name || '-'"
				}
			}
		},
		"status": {
			"bsonType": "int",
			"title": "试卷状态",
			"description": "试卷状态：0-草稿，1-发布",
			"label": "试卷状态",
			"minimum": 0,
			"maximum": 1,
			"enum": [{
					"value": 0,
					"text": "草稿"
				},
				{
					"value": 1,
					"text": "发布"
				}
			],
			"componentForEdit": {
				"name": "uni-data-select",
				"props": {
					"placeholder": "请选择试卷状态"
				}
			},
			"componentForShow": {
				"name": "text",
				"props": {
					"v-text": "options.filterData.status_localdata?.find(o=>o.value===item.status)?.text || '-'"
				}
			}
		},
		"created_date": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		},
		"updated_date": {
			"bsonType": "timestamp",
			"title": "更新时间",
			"description": "更新时间",
			"label": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			},
			"componentForShow": {
				"name": "uni-dateformat",
				"props": {
					"format": "yyyy-MM-dd hh:mm:ss"
				}
			}
		}
	}
}